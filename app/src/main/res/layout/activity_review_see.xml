<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewWrite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="후기"
            android:textSize="30dp"
            android:background="#FF8200"
            android:textColor="#F4FFFF"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation = "horizontal">
            <TextView
                android:id = "@+id/review_see_update"
                android:onClick="review_see_update"
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "수정"
                android:textSize="20dp"/>
            <TextView
                android:id = "@+id/review_see_delete"
                android:onClick="review_see_delete"
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "삭제"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id = "@+id/review_see_img"
                android:layout_margin="21dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src = "@drawable/sosizi_list1"/>
            <TextView
                android:id = "@+id/review_see_name"
                android:layout_margin="21dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text = "(맛있닭)직화구이향의 소시지 닭가슴살"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text = "제목 : "/>
            <TextView
                android:layout_margin="10dp"
                android:id = "@+id/review_see_title"
                android:text = "와우 닭가슴살 존맛탱!!"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text = "작성자 : "/>
            <TextView
                android:id = "@+id/review_see_writter"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "squart300kg"/>
        </LinearLayout>
        <TextView
            android:id = "@+id/review_see_contents"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "블라블라블라블라블라블라블라블라블라블라"
            android:hint = "내용을 입력하세요"/>


    </LinearLayout>
</LinearLayout>