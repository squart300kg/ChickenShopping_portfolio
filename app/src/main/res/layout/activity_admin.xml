<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 페이지"
            android:textSize="30dp"
            android:background="#FF8200"
            android:textColor="#F4FFFF"
            android:textAlignment="center"/>

        <TextView
            android:onClick="manage_delivery"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id = "@+id/manage_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text = "고객 주문내역 관리"/>
        <TextView
            android:onClick="manage_review"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:id = "@+id/manage_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text = "구매 후기 관리"/>
        <TextView
            android:onClick="manage_logout"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text = "관리자 로그아웃"/>
    </LinearLayout>

</ScrollView>