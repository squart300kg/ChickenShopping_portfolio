<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id = "@+id/review_list"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id = "@+id/review_list_img"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src = "@drawable/sosizi_list1"/>
        <TextView
            android:id = "@+id/review_list_title"
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text = "이 소시지 닭가슴살 맛있어요너무맛있어요!이 소시지 닭가슴살 너무맛있어요!"/>

        <TextView
            android:id = "@+id/review_list_writter"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "squart300kg"/>
    </LinearLayout>

</LinearLayout>