<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id = "@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo3" />
        <ImageView
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:src="@drawable/logo1" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/cart" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:onClick="goToBallList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:background="#FF8200"
                android:textColor="#F4FFFF"
                android:text = "볼닭가슴살"/>

            <TextView
                android:onClick="goToSteamList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textColor="#FF8200"
                android:text="스팀볼닭가슴살" />

            <TextView
                android:onClick="goToRawList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:background="#FF8200"
                android:textColor="#F4FFFF"
                android:text = "생닭가슴살"/>

            <TextView
                android:onClick="goTohunjeList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textColor="#FF8200"
                android:text="훈제닭가슴살" />

            <TextView
                android:onClick="goToYukpoList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:background="#FF8200"
                android:textColor="#F4FFFF"
                android:text = "육포볼닭가슴살"/>
            <TextView
                android:onClick="goToStakeList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textColor="#FF8200"
                android:text = "스테이크볼닭가슴살"/>
            <TextView
                android:onClick="goToSosiziList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:background="#FF8200"
                android:textColor="#F4FFFF"
                android:text = "소시지볼닭가슴살"/>
            <TextView
                android:onClick="goToSliceList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FF8200"
                android:text = "슬라이스닭가슴살"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical">


    <ImageView
        android:id = "@+id/sosizi_list1_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop = "10dp"
        android:src = "@drawable/sosizi_list1"/>
    <TextView
        android:textStyle="bold"
        android:id = "@+id/sosizi_list1_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "30dp"
        android:layout_margin="10dp"
        android:text = "(맛있닭)직화구이향의 소시지 닭가슴살"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="A. 100g X 10개(1KG)"
                android:textSize="30dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize = "20dp"
                android:text="20,000원"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="B. 100g X 20개(2KG)"
                android:textSize="30dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize = "20dp"
                android:text="40,000원"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="C. 100g X 30개(3KG)"
                android:textSize="30dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize = "20dp"
                android:text="60,000원"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="D. 100g X 40개(4KG)"
                android:textSize="30dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize = "20dp"
                android:text="80,000원"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E. 100g X 50개(5KG)"
                android:textSize="30dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize = "20dp"
                android:text="100,000원"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:id = "@+id/option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginTop="30dp"
                    android:id = "@+id/option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginTop="40dp"
                    android:id = "@+id/option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginTop="35dp"
                    android:id = "@+id/option_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginTop="30dp"
                    android:id = "@+id/option_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "수량 : "/>
        <EditText
            android:inputType="number"
            android:text="1"
            android:id = "@+id/count"
            android:layout_width="51dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "50dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:onClick = "goCart"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text="장바구니 담기" />

        <Button
            android:onClick="buySosizi"
            android:id="@+id/buySosizi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8200"
            android:text="바로 구매"
            android:visibility="visible"
            android:textSize = "20dp"/>

        <Button
            android:id="@+id/soldout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8200"
            android:text = "품절"
            android:visibility="gone"
            android:textSize = "20dp"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>