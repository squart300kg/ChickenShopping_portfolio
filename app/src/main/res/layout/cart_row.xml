<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id = "@+id/cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id = "@+id/cart_img_1"
            android:layout_width="210dp"
            android:layout_height="110dp"
            android:src = "@drawable/sosizi_list1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id = "@+id/cart_name_1"
                android:textSize = "20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "[파워닭] 닭가슴살 이름"/>
            <TextView
                android:id = "@+id/cart_option_1"
                android:textSize = "20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "100g X 30(3KG)"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation = "horizontal">
                <TextView
                    android:id = "@+id/cart_count_1"
                    android:textColor="#FF8200"
                    android:textSize = "20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "5개 | "/>
                <TextView
                    android:id = "@+id/cart_total_price_1"
                    android:textColor="#FF8200"
                    android:textSize = "20dp"
                    android:text = "60000원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/update"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text = "수정"/>
        <Button
            android:id = "@+id/delete"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text = "삭제"/>
    </LinearLayout>

</LinearLayout>