<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation = "horizontal"
        android:id = "@+id/linearLayout2"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id = "@+id/manage_delivery_see_row_img"
            android:layout_margin="20dp"
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:src = "@drawable/sosizi_list1"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <TextView
                android:id = "@+id/manage_delivery_see_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "[파워닭]닭가슴살 이름"
                android:textStyle="bold"
                android:textSize = "20dp"/>
            <TextView
                android:id = "@+id/manage_delivery_see_row_option"
                android:text = "100g X 20 (2KG)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize = "20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation = "horizontal">
                <TextView
                    android:id = "@+id/manage_delivery_see_row_count"
                    android:text = "5개 | "
                    android:textSize="20dp"
                    android:textColor = "#FF8200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id = "@+id/manage_delivery_see_row_price"
                    android:text = "100000원"
                    android:textColor = "#FF8200"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>