<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:id = "@+id/manage_list"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:id = "@+id/manage_id"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text = "아이디 : squart300kg"/>
        <TextView
            android:layout_margin="10dp"
            android:id = "@+id/manage_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text = "이름 : 홍길동"/>
        <TextView
            android:layout_margin="10dp"
            android:id = "@+id/manage_address"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text = "주소 : 서울시 양천구 신정2동"/>
        <TextView
            android:layout_margin="10dp"
            android:id = "@+id/manage_delivery_state"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text = "배송 현황 - 배송중"/>

            <TextView
                android:layout_margin="10dp"
                android:id = "@+id/manage_date"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text = "주문 날짜 : 2019/07/07"/>
    </LinearLayout>

</LinearLayout>